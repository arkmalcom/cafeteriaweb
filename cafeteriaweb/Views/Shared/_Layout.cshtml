<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cafeteria</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg fixed-top navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#barraNavegacion" aria-expanded="false" aria-label="Navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a href="@Url.Action("", "Home")"><img class="navbar-brand" src="~/Content/img/cafelogo.png" width="23" height="35"/></a>
            </div>
            <div class="navbar-collapse collapse" id="barraNavegacion">
                <ul class="nav navbar-nav mr-auto">
                    <li class="dropdown nav-link">
                        <div class="btn-group">
                            <a class="btn btn-custom-menu" role="button" href="@Url.Action("", "campus")">Campus</a>
                            <button class="btn btn-custom-menu dropdown-toggle drowpdown-toggle-split" data-toggle="dropdown">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item">@Html.ActionLink("Cafeteria", "Index", "cafeterias")</li>
                            </ul>
                        </div>
                    </li>
                    <li class="dropdown nav-link">
                        <div class="btn-group">
                            <a class="btn btn-custom-menu" role="button" href="@Url.Action("", "articulos")">Articulos</a>
                            <button class="btn btn-custom-menu dropdown-toggle drowpdown-toggle-split" data-toggle="dropdown">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Marcas", "Index", "marcas")</li>
                                <li>@Html.ActionLink("Proveedores", "Index", "proveedores")</li>
                                <li>@Html.ActionLink("Facturacion", "Index", "facturas")</li>
                            </ul>
                        </div>
                    </li>
                    <li class="dropdown nav-link">
                        <div class="btn-group">
                            <a class="btn btn-custom-menu" role="button" href="@Url.Action("", "tipos_usuario")">Tipos de Usuarios</a>
                            <button class="btn btn-custom-menu dropdown-toggle drowpdown-toggle-split" data-toggle="dropdown">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Usuarios", "Index", "usuarios")</li>
                                <li>@Html.ActionLink("Empleados", "Index", "empleados")</li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cafeteria Web</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
